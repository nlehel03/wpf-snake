<Window x:Class="wpf_snake.Views.LeaderBoardView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:wpf_snake.Controls"
        Title="Snake" Width="520" Height="545" Background="Black" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <!-- Reuse the main menu button look, compact version -->
        <Style x:Key="GreenMenuButton" TargetType="Button">
            <Setter Property="Background" Value="Black"/>
            <Setter Property="Foreground" Value="Green"/>
            <Setter Property="BorderBrush" Value="Green"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontFamily" Value="Courier New"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF003000"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Item template for the list entries. Foreground is bound to the ListBox's Foreground so color is controllable from the control -->
        <DataTemplate x:Key="ScoreItemTemplate">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="{Binding name}"
                           FontFamily="Courier New"
                           FontWeight="Bold"
                           FontSize="14"
                           Foreground="{Binding RelativeSource={RelativeSource AncestorType=ListBox}, Path=Foreground}"
                           VerticalAlignment="Center"/>
                <TextBlock Text="{Binding score}"
                           Grid.Column="1"
                           Margin="12,0,0,0"
                           FontFamily="Courier New"
                           FontWeight="Bold"
                           FontSize="14"
                           Foreground="{Binding RelativeSource={RelativeSource AncestorType=ListBox}, Path=Foreground}"
                           VerticalAlignment="Center"/>
            </Grid>
        </DataTemplate>
    </Window.Resources>

    <!-- Layout: reproduce WinForms arrangement using Canvas for exact placement -->
    <Canvas>
        <TextBlock Text="SNAKE"
                   FontFamily="Courier New"
                   FontWeight="Bold"
                   FontSize="72"
                   Foreground="Green"
                   Canvas.Left="91" Canvas.Top="65"
                   Width="337" TextAlignment="Center"/>

        <!-- Set the ListBox Foreground to Green; item template reads Foreground from the ListBox -->
        <controls:GameListBox x:Name="ScoresList"
                              ItemsSource="{Binding Scores}"
                              ItemTemplate="{StaticResource ScoreItemTemplate}"
                              Width="337" Height="252"
                              Canvas.Left="91" Canvas.Top="163"
                              FontFamily="Courier New"
                              FontSize="12"
                              Foreground="Green"/>

        <Button Content="Menu"
                Command="{Binding MenuCommand}"
                Style="{StaticResource GreenMenuButton}"
                Width="153" Height="56"
                Canvas.Left="184" Canvas.Top="421"/>
    </Canvas>
</Window>
