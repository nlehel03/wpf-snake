<Window x:Class="wpf_snake.Views.LeaderBoardView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:wpf_snake.Controls"
        Title="Snake" Width="520" Height="545" Background="Black" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <!-- Reuse the main menu button look, compact version -->
        <Style x:Key="GreenMenuButton" TargetType="Button">
            <Setter Property="Background" Value="Black"/>
            <Setter Property="Foreground" Value="Green"/>
            <Setter Property="BorderBrush" Value="Green"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontFamily" Value="Courier New"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF003000"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Item template for the list entries -->
        <DataTemplate x:Key="ScoreItemTemplate">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="{Binding name}"
                           FontFamily="Courier New"
                           FontWeight="Bold"
                           FontSize="14"
                           Foreground="{Binding RelativeSource={RelativeSource AncestorType=ListBox}, Path=Foreground}"
                           VerticalAlignment="Center"/>
                <TextBlock Text="{Binding score}"
                           Grid.Column="1"
                           Margin="12,0,0,0"
                           FontFamily="Courier New"
                           FontWeight="Bold"
                           FontSize="14"
                           Foreground="{Binding RelativeSource={RelativeSource AncestorType=ListBox}, Path=Foreground}"
                           VerticalAlignment="Center"/>
            </Grid>
        </DataTemplate>
        <Style TargetType="ScrollBar">
            <Setter Property="Width" Value="16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid Background="Black">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <RepeatButton Grid.Row="0" Background="Green" Command="ScrollBar.LineUpCommand" Height="16"/>

                            <Track x:Name="PART_Track" Grid.Row="1">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Background="Green" Command="ScrollBar.PageUpCommand"/>
                                </Track.DecreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb Background="Green" BorderBrush="Black" BorderThickness="1"/>
                                </Track.Thumb>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Background="Green" Command="ScrollBar.PageDownCommand"/>
                                </Track.IncreaseRepeatButton>
                            </Track>

                            <RepeatButton Grid.Row="2" Background="Green" Command="ScrollBar.LineDownCommand" Height="16"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="Orientation" Value="Horizontal">
                    <Setter Property="Height" Value="16"/>
                    <Setter Property="Width" Value="Auto"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ScrollBar">
                                <Grid Background="{TemplateBinding Background}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <RepeatButton Grid.Column="0" Background="Green" Command="ScrollBar.LineLeftCommand" Width="16"/>

                                    <!-- HORIZONTAL -->
                                    <Track x:Name="PART_Track"
                                           Grid.Column="1"
                                           Orientation="Horizontal"
                                           IsDirectionReversed="False"
                                           Minimum="{TemplateBinding Minimum}"
                                           Maximum="{TemplateBinding Maximum}"
                                           Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Value, Mode=TwoWay}"
                                           ViewportSize="{TemplateBinding ViewportSize}">
                                        <Track.DecreaseRepeatButton>
                                            <RepeatButton Background="Green" Command="ScrollBar.PageLeftCommand"/>
                                        </Track.DecreaseRepeatButton>
                                        <Track.Thumb>
                                            <Thumb Background="Green" BorderBrush="Black" BorderThickness="1"/>
                                        </Track.Thumb>
                                        <Track.IncreaseRepeatButton>
                                            <RepeatButton Background="Green" Command="ScrollBar.PageRightCommand"/>
                                        </Track.IncreaseRepeatButton>
                                    </Track>

                                    <RepeatButton Grid.Column="2" Background="Green" Command="ScrollBar.LineRightCommand" Width="16"/>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Canvas>
        <TextBlock Text="SNAKE"
                   FontFamily="Courier New"
                   FontWeight="Bold"
                   FontSize="72"
                   Foreground="Green"
                   Canvas.Left="91" Canvas.Top="65"
                   Width="337" TextAlignment="Center"/>

        <controls:GameListBox x:Name="ScoresList"
                              ItemsSource="{Binding Scores}"
                              ItemTemplate="{StaticResource ScoreItemTemplate}"
                              Width="337" Height="252"
                              Canvas.Left="91" Canvas.Top="163"
                              FontFamily="Courier New"
                              FontSize="12"
                              Foreground="Green"/>

        <Button Content="Menu"
                Command="{Binding MenuCommand}"
                Style="{StaticResource GreenMenuButton}"
                Width="153" Height="56"
                Canvas.Left="184" Canvas.Top="421"/>
    </Canvas>
</Window>
